---
import Layout from "@/layouts/Layout.astro";
import HeroContainer from "../HeroContainer.astro";

import { getI18N } from "@/i18n";
import Galeria from "../Galeria.astro";
import Numeros from "../Numeros.astro";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Layout
  title=`${i18n.SEO.ARCHIVO_TITLE} ${new Date().getFullYear()}`
  description=`${i18n.SEO.ARCHIVO_DESCRIPTION}`
>
  <HeroContainer img="/archivo-background.webp">
    <h1
      class="lg:text-6xl text-4xl text-center uppercase mb-20 font-tomaso tracking-widest"
    >
      {i18n.ARCHIVO.HERO_TITLE}
    </h1>
    <button
      class="border border-white py-2 px-4 rounded-full text-center max-w-max justify-self-end"
    >
      REVIVE LA ÚLTIMA GALA
    </button>
  </HeroContainer>
  <main>
    <Galeria />
    <Numeros />
  </main>
</Layout>
