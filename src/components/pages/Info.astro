---
import Layout from "@/layouts/Layout.astro";
import HeroContainer from "../HeroContainer.astro";

import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Layout
  title=`${i18n.SEO.INFO_TITLE} ${new Date().getFullYear()}`
  description=`${i18n.SEO.INFO_DESCRIPTION_1} ${new Date().getFullYear()} ${i18n.SEO.INFO_DESCRIPTION_2}`
>
  <HeroContainer img="/info-background.webp" />
</Layout>
