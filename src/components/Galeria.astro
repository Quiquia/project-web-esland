---
import "photoswipe/style.css";
---

<div class="pswp-gallery grid grid-cols-3 gap-8" id="gallery">
  {
    Array.from({ length: 9 }).map((_, i) => (
      <a href={`/archivo-page/gallery/img-${i + 1}.webp`} target="_blank">
        <img src={`/archivo-page/gallery/img-${i + 1}.webp`} alt="" />
      </a>
    ))
  }
</div>

<script>
  import PhotoSwipeLightbox from "photoswipe/lightbox";
  const lightbox = new PhotoSwipeLightbox({
    gallery: "#gallery",
    children: "a",
    pswpModule: () => import("photoswipe"),
  });
  lightbox.init();
</script>
